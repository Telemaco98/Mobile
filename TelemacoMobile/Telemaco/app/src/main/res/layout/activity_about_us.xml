<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGreen"
    tools:context=".activity.AboutUsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:src="@drawable/ic_arrow_back_black"
                />

            <ImageView
                android:id="@+id/logo"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:src="@mipmap/icon"
                android:layout_marginLeft="-20dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/quote"
                android:paddingRight="20dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="20sp"
                android:paddingBottom="10dp"
                android:text="Sobre a Ferramenta" />
        </LinearLayout>


        <TextView
            android:id="@+id/txt_about_tool"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/about_the_tool"
            android:textColor="@android:color/black"
            android:textAlignment="textStart"
            android:textSize="11sp"
            android:paddingBottom="20dp"
            />

        <TextView
            android:layout_width="60sp"
            android:layout_height="1dp"
            android:background="@android:color/white"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="20dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/equip"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="20sp"
                android:paddingBottom="10dp"
                android:text="Nossa Equipe" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:paddingBottom="10dp">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@mipmap/franklin"
                />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@mipmap/shirley_ohara"
                />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@mipmap/valmir_correa"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Franklin Matheus"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textAlignment="center"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Shirley Ohara"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textAlignment="center"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Valmir Correa"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textAlignment="center"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/student"
                android:textColor="@android:color/white"
                android:textStyle="italic"
                android:textSize="9sp"
                android:textAlignment="center"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/student"
                android:textColor="@android:color/white"
                android:textStyle="italic"
                android:textSize="9sp"
                android:textAlignment="center"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/student"
                android:textColor="@android:color/white"
                android:textStyle="italic"
                android:textSize="9sp"
                android:textAlignment="center"
                />
        </LinearLayout>

        <TextView
            android:layout_width="60sp"
            android:layout_height="1dp"
            android:background="@android:color/white"
            android:paddingBottom="20dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="20dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/web"
                android:paddingRight="20dp"
                android:paddingTop="5dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="20sp"
                android:paddingBottom="10dp"
                android:text="Redes Sociais" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="20dp">

            <ImageView
                android:id="@+id/btn_face"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@mipmap/facebook"
                />

            <ImageView
                android:id="@+id/btn_twitter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@mipmap/twitter"
                />

            <ImageView
                android:id="@+id/btn_insta"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@mipmap/instagram"
                />
        </LinearLayout>

        <TextView
            android:layout_width="60sp"
            android:layout_height="1dp"
            android:background="@android:color/white"
            android:paddingBottom="20dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="20dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/phone"
                android:paddingRight="20dp"
                android:paddingTop="5dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="20sp"
                android:paddingBottom="10dp"
                android:text="Fale Conosco" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Título"
            android:paddingBottom="5dp"
            />

        <EditText
            android:id="@+id/edt_msg_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:background="@android:color/white"
            android:padding="10dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mensagem"
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            />

        <EditText
            android:id="@+id/adt_msg_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="10"
            android:minLines="5"
            android:maxLines="15"
            android:gravity="left|top"
            android:background="@android:color/white"
            android:padding="10dp"
            />

        <Button
            android:id="@+id/btn_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ENVIAR"
            android:background="@color/colorBackground"
            android:textColor="@android:color/white"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:shadowRadius="3"
            />

        <TextView
            android:layout_width="60sp"
            android:layout_height="1dp"
            android:background="@android:color/white"
            android:layout_marginBottom="20dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Telemaco 2018 © Copy Right"
            android:textColor="@android:color/white"
            android:textSize="10sp"
            />
    </LinearLayout>
</ScrollView>